{% extends 'base.html.twig' %}

{% block title %}Lista de Gavetas{% endblock %}

{% block stylesheets %}
    <style>
        /* Reutilizando o CSS padrão Dark/Gold */
        .listing-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 20px 40px var(--shadow-dark);
            margin-top: 2rem;
            animation: fadeInUp 0.6s ease-out;
        }

        .listing-header {
            display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;
        }
        .listing-title h2 {
            font-family: 'Playfair Display', serif; color: var(--accent-gold); font-size: 2rem; margin-bottom: 0.5rem;
        }
        .listing-title p { color: var(--text-muted); font-size: 0.95rem; }

        .btn-create {
            background: linear-gradient(135deg, var(--accent-gold), var(--accent-gold-dark));
            color: var(--primary-dark); padding: 0.8rem 1.5rem; border-radius: 8px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: 0.3s;
        }
        .btn-create:hover { transform: translateY(-2px); box-shadow: 0 5px 15px var(--shadow-gold); }

        .styled-table { width: 100%; border-collapse: separate; border-spacing: 0 0.5rem; min-width: 600px; }
        .styled-table thead th { text-align: left; padding: 1rem; font-family: 'Playfair Display', serif; color: var(--text-secondary); border-bottom: 1px solid var(--accent-gold); text-transform: uppercase; }
        .styled-table tbody tr { background-color: rgba(255, 255, 255, 0.02); transition: 0.2s; }
        .styled-table tbody tr:hover { background-color: rgba(212, 175, 55, 0.05); transform: scale(1.005); }
        .styled-table td { padding: 1.2rem 1rem; color: var(--text-secondary); vertical-align: middle; }
        .styled-table tbody tr td:first-child { border-top-left-radius: 8px; border-bottom-left-radius: 8px; }
        .styled-table tbody tr td:last-child { border-top-right-radius: 8px; border-bottom-right-radius: 8px; }

        .btn-icon { width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; border-radius: 50%; border: 1px solid var(--border-color); color: var(--text-muted); transition: 0.2s; text-decoration: none; }
        .btn-icon:hover { border-color: var(--accent-gold); color: var(--accent-gold); }
    </style>
{% endblock %}

{% block body %}
    <main class="main section">
        <div class="container">
            <div class="listing-card">
                <div class="listing-header">
                    <div class="listing-title">
                        <h2>Gestão de Gavetas</h2>
                        <p>Controle de numeração e vinculação aos locais</p>
                    </div>
                    <a href="{{ path('app_locker_new') }}" class="btn-create">
                        <i class="fas fa-plus"></i> Nova Gaveta
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="styled-table">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Número</th>
                            <th>Local Vinculado</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for locker in lockers %}
                            <tr>
                                <td>#{{ locker.id }}</td>
                                <td style="font-weight: bold; color: var(--text-primary); font-size: 1.1rem;">
                                    <i class="fas fa-box" style="color: var(--accent-gold); margin-right: 5px;"></i>
                                    {{ locker.number }}
                                </td>
                                <td>
                                    {% if locker.local %}
                                        <span style="font-size: 0.9rem; color: var(--text-muted);">
                                            {{ locker.local.type.label() }} - Bloco {{ locker.local.block }}
                                        </span>
                                    {% else %}
                                        <span style="color: var(--text-muted); font-style: italic;">Não vinculado</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div style="display: flex; gap: 0.5rem;">
                                        <a href="{{ path('app_locker_show', {'id': locker.id}) }}" class="btn-icon" title="Ver">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_locker_edit', {'id': locker.id}) }}" class="btn-icon" title="Editar">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" style="text-align: center; padding: 3rem; color: var(--text-muted);">
                                    <i class="fas fa-box-open" style="font-size: 3rem; margin-bottom: 1rem; display: block;"></i>
                                    Nenhuma gaveta cadastrada.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
