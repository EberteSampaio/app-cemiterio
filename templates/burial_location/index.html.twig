{% extends 'base.html.twig' %}

{% block title %}Locais de Sepultamento{% endblock %}

{% block stylesheets %}
    <style>
        /* --- CSS IDÊNTICO AO DE FALECIDOS --- */

        /* Container principal estilo Card */
        .listing-card {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 20px 40px var(--shadow-dark);
            margin-top: 2rem;
            animation: fadeInUp 0.6s ease-out;
        }

        /* Cabeçalho da Listagem */
        .listing-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .listing-title h2 {
            font-family: 'Playfair Display', serif;
            color: var(--accent-gold);
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .listing-title p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        /* Botão Novo */
        .btn-create {
            background: linear-gradient(135deg, var(--accent-gold), var(--accent-gold-dark));
            color: var(--primary-dark);
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition-normal);
            border: none;
        }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px var(--shadow-gold);
            background: linear-gradient(135deg, var(--accent-gold-light), var(--accent-gold));
        }

        /* Tabela Responsiva */
        .table-responsive {
            overflow-x: auto;
            border-radius: 8px;
        }

        /* Estilo da Tabela */
        .styled-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 0.5rem;
            min-width: 800px;
        }

        .styled-table thead th {
            text-align: left;
            padding: 1rem;
            font-family: 'Playfair Display', serif;
            color: var(--text-secondary);
            font-weight: 600;
            font-size: 1.1rem;
            border-bottom: 1px solid var(--accent-gold);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .styled-table tbody tr {
            background-color: rgba(255, 255, 255, 0.02);
            transition: var(--transition-fast);
        }

        .styled-table tbody tr:hover {
            background-color: rgba(212, 175, 55, 0.05);
            transform: scale(1.005);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .styled-table td {
            padding: 1.2rem 1rem;
            color: var(--text-secondary);
            vertical-align: middle;
            border-top: 1px solid transparent;
            border-bottom: 1px solid transparent;
        }

        .styled-table tbody tr td:first-child {
            border-top-left-radius: 8px;
            border-bottom-left-radius: 8px;
        }
        .styled-table tbody tr td:last-child {
            border-top-right-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        /* Classes utilitárias para as células */
        .cell-name {
            color: var(--text-primary) !important;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .cell-date {
            color: var(--text-muted);
            font-size: 0.9rem;
            font-family: monospace;
        }

        /* Botões de Ação (Ícones) */
        .actions-group {
            display: flex;
            gap: 0.5rem;
        }

        .btn-icon {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            border: 1px solid var(--border-color);
            color: var(--text-muted);
            transition: var(--transition-fast);
            text-decoration: none;
        }

        .btn-icon:hover {
            border-color: var(--accent-gold);
            color: var(--accent-gold);
            background: rgba(212, 175, 55, 0.1);
        }

        /* Mensagem de vazio */
        .no-records {
            text-align: center;
            padding: 3rem;
            color: var(--text-muted);
        }
        .no-records i {
            font-size: 3rem;
            color: var(--border-color);
            margin-bottom: 1rem;
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <main class="main section">
        <div class="container">

            <div class="listing-card">
                <div class="listing-header">
                    <div class="listing-title">
                        <h2>Locais de Sepultamento</h2>
                        <p>Gerenciamento de jazigos, gavetas e ossários</p>
                    </div>
                    <a href="{{ path('app_burial_location_new') }}" class="btn-create">
                        <i class="fas fa-plus"></i> Novo Local
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="styled-table">
                        <thead>
                        <tr>
                            <th width="5%">ID</th>
                            <th>Tipo</th>
                            <th>Bloco</th>
                            <th>Seção</th>
                            <th>Número</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for burial_location in burial_locations %}
                            <tr>
                                <td class="cell-date">#{{ burial_location.id }}</td>
                                <td class="cell-name">
                                    <i class="fas fa-map-marker-alt" style="color: var(--accent-gold); margin-right: 5px;"></i>
                                    {# Assumindo que seu Enum tem método label() #}
                                    {{ burial_location.type.label() }}
                                </td>
                                <td>{{ burial_location.block }}</td>
                                <td>{{ burial_location.section }}</td>
                                <td style="font-weight: bold; color: var(--accent-gold);">{{ burial_location.number }}</td>
                                <td>
                                    <div class="actions-group">
                                        <a href="{{ path('app_burial_location_show', {'id': burial_location.id}) }}" class="btn-icon" title="Ver detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_burial_location_edit', {'id': burial_location.id}) }}" class="btn-icon" title="Editar">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="no-records">
                                    <i class="fas fa-map-marked-alt"></i>
                                    Nenhum local cadastrado no sistema.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
